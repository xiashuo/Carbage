<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="600"
            android:background="@drawable/border_right"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/border"
                android:layout_marginTop="15dp"
                />
            <LinearLayout
                android:id="@+id/button1"
                style="@style/layout_style"
                android:layout_marginRight="0.5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/bg_selected"
                >
                <ImageView
                    style="@style/ig_style"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/znjs"
                    />
                <TextView
                    android:id="@+id/tv_znjs"
                    style="@style/tv_style"
                    android:layout_marginLeft="15dp"
                    android:text="智能技术"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/border"
                />
            <LinearLayout
                android:id="@+id/button2"
                style="@style/layout_style"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0.5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/border_top_down"
                >
                <ImageView
                    android:layout_marginLeft="15dp"
                    style="@style/ig_style"
                    android:src="@drawable/sdsz"
                    />
                <TextView
                    android:id="@+id/tv_sdsz"
                    style="@style/tv_style"
                    android:layout_marginLeft="15dp"
                    android:text="速度设置"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/button3"
                style="@style/layout_style"
                android:layout_marginRight="0.5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/border_bottom"
                >
                <ImageView
                    android:layout_marginLeft="15dp"
                    style="@style/ig_style"
                    android:src="@drawable/gcsz"
                    />
                <TextView
                    android:id="@+id/tv_gcsz"
                    style="@style/tv_style"
                    android:layout_marginLeft="15dp"
                    android:text="工厂设置"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0.5dp"
                android:background="@color/border"
                android:orientation="vertical">
                <RelativeLayout
                    style="@style/layout_style"
                    android:layout_marginTop="0.5dp"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:id="@+id/iv1"
                        style="@style/ig_style"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/sy"
                        />
                    <TextView
                        android:id="@+id/tv1"
                        style="@style/tv_style"
                        android:layout_toRightOf="@+id/iv1"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:text="声音"
                        />
                    <Switch
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:id="@+id/switch5"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:thumb="@drawable/switch_selector"
                        android:track="@drawable/track_selector" />
                </RelativeLayout>
                <RelativeLayout
                    style="@style/layout_style"
                    android:layout_marginTop="0.5dp"
                    android:background="@color/white"
                    android:layout_marginBottom="0.5dp"
                    >
                    <ImageView
                        android:id="@+id/iv2"
                        style="@style/ig_style"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/zd"
                        />
                    <TextView
                        style="@style/tv_style"
                        android:layout_toRightOf="@+id/iv2"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:text="振动"
                        />
                    <Switch
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:id="@+id/switch2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:thumb="@drawable/switch_selector"
                        android:track="@drawable/track_selector" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0.5dp"
                android:background="@color/border"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/button4"
                    style="@style/layout_style"
                    android:layout_marginTop="0.5dp"
                    android:layout_marginBottom="0.5dp"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:id="@+id/iv6"
                        style="@style/ig_style"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/yytb"
                        />
                    <TextView
                        android:id="@+id/tv_dyy"
                        style="@style/tv_style"
                        android:layout_toRightOf="@+id/iv6"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:text="多语言"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="0.5dp"
                android:background="@color/border"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/button5"
                    style="@style/layout_style"
                    android:layout_marginTop="0.5dp"
                    android:layout_marginBottom="0.5dp"
                    android:background="@color/white"
                    >
                    <ImageView
                        android:id="@+id/iv7"
                        style="@style/ig_style"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/gy"
                        />
                    <TextView
                        android:id="@+id/tv_gy"
                        style="@style/tv_style"
                        android:layout_toRightOf="@+id/iv7"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:text="关于"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="936"
            android:background="@color/bg_layout"
            >
            <include
                layout="@layout/layout_znjs"
                />
            <include
                layout="@layout/layout_sdsz"
                />
            <include
                layout="@layout/layout_factoryset"
                />
            <include
                layout="@layout/layout_language"
                />
            <include
                layout="@layout/layout_gy"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>