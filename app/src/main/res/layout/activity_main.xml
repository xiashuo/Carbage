<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <RelativeLayout
            style="@style/layout_style"
            android:background="@drawable/title_bg"
            >
            <ImageButton
                android:id="@+id/ib_menu"
                style="@style/ig_style"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/menu_selector"
                />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="上车信息"
                android:textSize="25dp"
                android:textColor="#ffffff"
                />
            <CheckBox
                android:id="@+id/cb_guzhang"
                style="@style/ig_style"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:background="@drawable/guzhang_pressed"
                />
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="44dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="56.6dp"
            >
        </FrameLayout>
        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="0dp"
                android:layout_height="56.6dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@mipmap/xinxi"
                >

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_work"
                android:layout_width="0dp"
                android:layout_height="56.6dp"
                android:layout_weight="1"
                android:background="@mipmap/zuoye"
                android:orientation="horizontal"
                >
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_manager"
                android:layout_width="0dp"
                android:layout_height="56.6dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@mipmap/guanli"
                >
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_set"
                android:layout_width="0dp"
                android:layout_height="56.6dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@mipmap/set"
                >
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <include
        layout="@layout/layout_letfitem"
        android:layout_width="302.5dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        />
    <include
        layout="@layout/layout_rightitem"
        android:layout_width="465dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        />
</android.support.v4.widget.DrawerLayout>