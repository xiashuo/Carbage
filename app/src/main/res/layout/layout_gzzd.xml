<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll8_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:orientation="vertical"
    >
    <LinearLayout
        android:background="@drawable/radus_shape"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image1"
                style="@style/ig_style"
                android:background="@drawable/clxz"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                style="@style/tv_style"
                android:layout_marginLeft="10dp"
                android:text="车辆筛选"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image1"
                />
            <Spinner
                android:id="@+id/sp6"
                android:layout_width="106dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/xlk1"
                android:spinnerMode="dropdown"
                android:dropDownVerticalOffset="28dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="5dp"
        android:text="FA000001"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/radus_shape"
        android:padding="1dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl4"
            style="@style/layout_style"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/ig5"
                style="@style/ig_style"
                android:background="@drawable/gzdm"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                />
            <TextView
                style="@style/tv_style"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ig5"
                android:layout_marginLeft="5dp"
                android:text="故障代码：80000001"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/rl5"
            style="@style/layout_style"
            android:background="@color/white"
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/myGrey"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                style="@style/tv_style4"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ig6"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="发动机冷却液湿度传感器电路-电压高于正常值或对高压电源短路"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/myGrey"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            />
        <RelativeLayout
            android:id="@+id/rl6"
            style="@style/layout_style"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/ig6"
                style="@style/ig_style"
                android:background="@drawable/gzdm"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                />
            <TextView
                style="@style/tv_style"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ig6"
                android:layout_marginLeft="5dp"
                android:text="故障代码：81000002"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/rl7"
            style="@style/layout_style"
            android:background="@color/white"
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/myGrey"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                style="@style/tv_style4"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ig6"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="发动机冷却液湿度传感器电路-电压高于正常值或对高压电源短路"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
