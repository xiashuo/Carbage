<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_left"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_layout"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/radus_shape"
        >
        <ImageView
            android:id="@+id/iv_tx"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/dltx2"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            >
            <TextView
                style="@style/tv_style"
                android:textSize="15dp"
                android:text="XZZX_JS_1203"
                />
            <TextView
                style="@style/tv_style4"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:text="手机号:136XXXX0846"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@color/border"
        >
        <LinearLayout
            android:id="@+id/button1"
            style="@style/layout_style"
            android:orientation="horizontal"
            android:layout_marginTop="0.5dp"
            android:gravity="center_vertical"
            android:background="@color/bg_selected"
            android:onClick="userManager"
            >
            <ImageView
                android:layout_marginLeft="15dp"
                style="@style/ig_style"
                android:src="@drawable/clxztb"
                />
            <TextView
                android:id="@+id/tv1"
                style="@style/tv_style"
                android:layout_marginLeft="15dp"
                android:text="车辆选择"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button2"
            style="@style/layout_style"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="0.5dp"
            android:onClick="userManager"
            >
            <ImageView
                android:layout_marginLeft="15dp"
                style="@style/ig_style"
                android:src="@drawable/jsygltb"
                />
            <TextView
                android:id="@+id/tv2"
                style="@style/tv_style"
                android:layout_marginLeft="15dp"
                android:text="驾驶员管理"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button3"
            style="@style/layout_style"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="0.5dp"
            android:onClick="userManager"
            >
            <ImageView
                android:layout_marginLeft="15dp"
                style="@style/ig_style"
                android:src="@drawable/mrzxtb"
                />
            <TextView
                android:id="@+id/tv3"
                style="@style/tv_style"
                android:layout_marginLeft="15dp"
                android:text="每日资讯"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button4"
            style="@style/layout_style"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:onClick="userManager"
            >
            <ImageView
                android:layout_marginLeft="15dp"
                style="@style/ig_style"
                android:src="@drawable/ppcb"
                />
            <TextView
                android:id="@+id/tv4"
                style="@style/tv_style"
                android:layout_marginLeft="15dp"
                android:text="品牌传播"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
